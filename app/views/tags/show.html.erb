<article>
    <div class="container post-body">
        <div class="container">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
			  <h3>Posts tagged with <%= @tag.title %></h3>
			  <hr />
			  <div class="post-preview">
	            <% @posts.each do |post| %>
		            <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
		            <h3 class="post-subtitle"><%= post.intro.truncate_words(30) %>...</h3>
		            <p class="post-meta">Posted on <%= post.created_at.strftime("%b. %d, %Y") %></p>
	            <% end %>
			</div>
		</div>
	</div>
</article>