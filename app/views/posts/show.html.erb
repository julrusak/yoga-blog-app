<header class="intro-header" style="background-image: url(<%= image_tag @post.image %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1><%= @post.title %></h1>
                    <h2 class="subheading">Thoughts and musings</h2>
                </div>
            </div>
        </div>
    </div>
</header>

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            	<p>
				  <%= simple_format(@post.text) %>
				</p>
			</div>
		</div>
	</div>
</article>
