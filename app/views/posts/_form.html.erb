<%= form_for(@post) do |f| %>
	<%= f.label :title %><br>
	<%=f.text_field :title %><br><br>
	<%= f.label :subtitle %><br>
	<%=f.text_field :subtitle %><br><br>
	<%= f.label :intro %><br>
	<%=f.text_area :intro, :cols => "100", :rows => "70" %><br>
	<%= f.label :text %><br>
	<%=f.text_area :text, :cols => "100", :rows => "70" %><br>
	<%= f.label :conclusion %><br>
	<%=f.text_area :conclusion, :cols => "100", :rows => "70" %><br>
	<%= f.label :image %><br>
	<%=f.file_field :image %>
	<%= f.submit %>  
<% end %>